@model List<BookCatalogue.Core.Models.Author>
@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1 class="display-4">Manage Authors</h1>

	<ul class="nav nav-pills nav-fill mt-4">
		<li class="nav-item">
			<a class="nav-link active" aria-current="page" href="#">List</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="/Author/Create">New</a>
		</li>
	</ul>
</div>

<h2 class="mt-4">Authors:</h2>
<div class="row">
	@foreach (var author in Model)
	{
		<a href="/Author/Details/@author.Id" class="card col-md-4">
			<div class="card-title">
				<h3>@author.FirstName @author.LastName</h3>
			</div>
			<div class="card-body">
				<img src="@author.ImageUrl" style="max-width: 100%;" />
			</div>
		</a>
	}
</div>

